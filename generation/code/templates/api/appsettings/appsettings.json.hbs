{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "{{contextName}}Database": "Host=localhost;Port={{dbPort}};Database={{databaseName}};Username=postgres;Password=postgres"
  }{{#if jwt}},
  "JwtSettings": {
    "SecretKey": "your-super-secret-key-change-in-production-min-32-chars",
    "Issuer": "{{jwt.issuer}}",
    "Audience": "{{jwt.audience}}",
    "ExpirationMinutes": {{jwt.expirationMinutes}}
  }{{/if}}
}
